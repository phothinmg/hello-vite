{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"baseUrl": ".",
		"paths": {
			"/components/*":["components/*"],
			"/style/*":["style/*"],
			"/lib/*":["lib/*"],
			"/posts/*":["posts/*"]
		}
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
